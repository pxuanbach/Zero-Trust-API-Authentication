# Zero Trust API Authentication Configuration

# Proxy Server Configuration
PROXY_HOST=0.0.0.0
PROXY_PORT=8443

# TLS Configuration
TLS_CERT_FILE=certs/server.crt
TLS_KEY_FILE=certs/server.key
CA_CERT_FILE=certs/ca.crt
REQUIRE_CLIENT_CERT=true

# JWT Configuration
JWT_ALGORITHM=RS256
JWT_ISSUER=zero-trust-auth
JWT_AUDIENCE=api-gateway
JWT_PUBLIC_KEY_URL=

# DPoP Configuration
DPOP_ENABLED=true
DPOP_MAX_AGE_SECONDS=60

# Cache Configuration
CACHE_ENABLED=true
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=300

# Certificate Agent Configuration
CERT_AGENT_URL=http://localhost:8080
CERT_AGENT_TIMEOUT=30
CERT_ADAPTER=internal

# Backend Configuration
BACKEND_BASE_URL=http://localhost:3000
BACKEND_TIMEOUT=30

# Security Configuration
ENABLE_OCSP_VALIDATION=true
ENABLE_CRL_VALIDATION=true
TRUSTED_CA_LIST=

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_AUDIT_LOG=true
AUDIT_LOG_FILE=logs/audit.log

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_TRACING=true

# AWS Configuration (if using AWS adapter)
AWS_REGION=us-east-1
AWS_PROFILE=
PRIVATE_CA_ARN=