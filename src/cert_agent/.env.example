# Certificate Agent Environment Variables

# Application Settings
CERT_AGENT_CERT_ADAPTER=internal
CERT_AGENT_HOST=0.0.0.0
CERT_AGENT_PORT=8080
CERT_AGENT_LOG_LEVEL=INFO

# Internal CA Settings
CERT_AGENT_CA_CERT_PATH=ca/ca.crt
CERT_AGENT_CA_KEY_PATH=ca/ca.key
CERT_AGENT_CERT_STORAGE_PATH=certs/

# AWS ACM Settings (optional, if using AWS adapter)
# CERT_AGENT_AWS_REGION=us-east-1
# CERT_AGENT_AWS_ACCESS_KEY_ID=your-access-key-id
# CERT_AGENT_AWS_SECRET_ACCESS_KEY=your-secret-access-key

# CORS Settings
CERT_AGENT_CORS_ORIGINS=*
CERT_AGENT_CORS_ALLOW_CREDENTIALS=true
