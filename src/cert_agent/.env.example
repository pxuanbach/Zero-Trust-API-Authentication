# Certificate Agent Environment Variables

# Application Settings
CERT_AGENT_CERT_ADAPTER=internal
CERT_AGENT_HOST=0.0.0.0
CERT_AGENT_PORT=8080
CERT_AGENT_LOG_LEVEL=INFO

# Internal CA Settings
CERT_AGENT_CA_CERT_PATH=ca/ca.crt
CERT_AGENT_CA_KEY_PATH=ca/ca.key
CERT_AGENT_CERT_STORAGE_PATH=certs/

# Cryptography Algorithm Settings
# Certificate Algorithm: ECDSA_P256, RSA_2048, ED25519
CERT_AGENT_CERTIFICATE_ALGORITHM=ECDSA_P256

# Token Algorithm: ES256, RS256, EdDSA
CERT_AGENT_TOKEN_ALGORITHM=ES256

# Hash Algorithm: SHA256, SHA512, SHA3_256, SHA3_512
CERT_AGENT_HASH_ALGORITHM=SHA256

# RSA Key Size (only for RSA_2048): 2048, 4096
CERT_AGENT_RSA_KEY_SIZE=2048

# Certificate Validity (days)
CERT_AGENT_CERTIFICATE_VALIDITY_DAYS=90

# AWS ACM Settings (optional, only needed if using AWS adapter)
# CERT_AGENT_AWS_REGION=us-east-1
# CERT_AGENT_AWS_ACCESS_KEY_ID=your-access-key-id
# CERT_AGENT_AWS_SECRET_ACCESS_KEY=your-secret-access-key

# CORS Settings
CERT_AGENT_CORS_ORIGINS=*
CERT_AGENT_CORS_ALLOW_CREDENTIALS=true
