{
  "id": "zero-trust-realm",
  "realm": "zero-trust",
  "displayName": "Zero Trust Realm",
  "enabled": true,
  "sslRequired": "none",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "accessTokenLifespan": 300,
  "accessTokenLifespanForImplicitFlow": 900,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "clients": [
    {
      "clientId": "test-client",
      "name": "Test Client",
      "description": "Client for testing purposes",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "test-client-secret",
      "redirectUris": [
        "http://localhost:*/*"
      ],
      "webOrigins": [
        "+"
      ],
      "protocol": "openid-connect",
      "publicClient": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": true,
      "fullScopeAllowed": true,
      "authorizationSettings": {
        "allowRemoteResourceManagement": true,
        "policyEnforcementMode": "ENFORCING",
        "resources": [
          {
            "name": "Service A Resource",
            "type": "urn:service-a:resources:api",
            "ownerManagedAccess": false,
            "uris": ["/protected", "/call-b"],
            "scopes": [
              {"name": "read"},
              {"name": "write"}
            ]
          },
          {
            "name": "Service B Resource",
            "type": "urn:service-b:resources:api",
            "ownerManagedAccess": false,
            "uris": ["/data", "/process"],
            "scopes": [
              {"name": "read"},
              {"name": "write"}
            ]
          }
        ],
        "policies": [
          {
            "name": "Admin Only Policy",
            "description": "Only admin role can access",
            "type": "role",
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "roles": "[{\"id\":\"admin\",\"required\":true}]"
            }
          },
          {
            "name": "User Read Policy",
            "description": "Users can read resources",
            "type": "role",
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "roles": "[{\"id\":\"user\",\"required\":true}]"
            }
          }
        ],
        "scopes": [
          {"name": "read"},
          {"name": "write"}
        ]
      }
    }
  ],
  "users": [
    {
      "username": "testuser",
      "email": "testuser@example.com",
      "emailVerified": true,
      "firstName": "Test",
      "lastName": "User",
      "enabled": true,
      "credentials": [
        {
          "type": "password",
          "value": "testpassword123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "user"
      ],
      "clientRoles": {
        "realm-management": [
          "view-users",
          "query-users"
        ]
      }
    },
    {
      "username": "admin",
      "email": "admin@example.com",
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "enabled": true,
      "credentials": [
        {
          "type": "password",
          "value": "adminpassword123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "admin",
        "user"
      ],
      "clientRoles": {
        "realm-management": [
          "manage-users",
          "view-users",
          "query-users"
        ]
      }
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "user",
        "description": "Regular user role"
      },
      {
        "name": "admin",
        "description": "Administrator role"
      }
    ]
  },
  "scopeMappings": [],
  "clientScopeMappings": {},
  "defaultRoles": [
    "user"
  ],
  "eventsEnabled": true,
  "eventsExpiration": 259200,
  "eventsListeners": ["jboss-logging"],
  "enabledEventTypes": [
    "LOGIN",
    "LOGIN_ERROR",
    "LOGOUT",
    "CODE_TO_TOKEN",
    "CODE_TO_TOKEN_ERROR",
    "REFRESH_TOKEN",
    "REFRESH_TOKEN_ERROR",
    "INTROSPECT_TOKEN",
    "INTROSPECT_TOKEN_ERROR"
  ],
  "adminEventsEnabled": true,
  "adminEventsDetailsEnabled": true
}
